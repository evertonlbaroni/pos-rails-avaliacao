<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>
      <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label 'Título', :class => 'control-label' %>
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
    </div>
    <div class="col-md-12">
      <div class="field">
        <%= f.label 'Descrição', :class => 'control-label' %>
        <%= f.text_area :description,  :class => 'form-control' %>
      </div>
    </div>
    <div class="col-md-12">
      <div class="field">
        <%= f.label 'Comprada', :class => 'control-label' %>
        <div class="checkbox">
          <%= f.check_box :purchase, :class => 'checkbox' %>
        </div>
      </div>
    </div>
  </div>
  <%= f.submit 'Salvar', :class => 'btn btn-success', :style => 'float:right' %>

<% end %>
