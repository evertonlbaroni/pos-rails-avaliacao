<p id="notice" class="alert alert-info"><%= notice %></p>

<legend>Listas</legend>

<div class="row">
  <div class="col-md-12 ">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Título</th>
          <th>Descrição</th>
          <th>Comprada</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @lists.each do |list| %>
          <tr>
            <td><%= list.title %></td>
            <td><%= list.description %></td>
            <td><%= list.purchase ? "Comprada" : "Não C" %></td>
            <td >
              <%= link_to 'Detalhes', list, :class => 'btn btn-primary' %>
              <%= link_to 'Editar', edit_list_path(list), :class => 'btn btn-primary' %>
              <%= link_to 'Excluir', list, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'Nova Lista', new_list_path, :class => "btn btn-success", :style => 'float:right' %>
