<p id="notice"><%= notice %></p>

<legend>Listing Products</legend>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Description</th>
          <th>List</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.quantity %></td>
            <td><%= product.description %></td>
            <td><%= product.list.title %></td>
            <td><%= link_to 'Detalhes', list_product_path(@list,product), :class => 'btn btn-primary' %></td>
            <td><%= link_to 'Editar', edit_list_product_path(@list,product), :class => 'btn btn-primary' %></td>
            <td><%= link_to 'Deletar', list_product_path(@list,product), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<%= link_to 'Voltar para Lista', list_path(@list), :class => "btn btn-primary", :style => 'float:left' %>

<%= link_to 'Novo Produto', new_list_product_path, :class => "btn btn-success", :style => 'float:right' %>
